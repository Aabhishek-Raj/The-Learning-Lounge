{
  "name": "@repo/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm build:prisma && tsup --clean",
    "check-types": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "build:prisma": "prisma generate",
    "migrate": "prisma migrate",
    "push": "prisma db push"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prisma": "^7.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^7.0.0",
    "nanoid": "^5.1.6"
  }
}